# Basic binds
super + Return
  alacritty
super + w
  $BROWSER
super + d
	$HOME/.config/rofi/launchers/type-4/launcher.sh
super + s
  $HOME/.config/rofi/applets/bin/screenshot.sh
super + shift + r
  openbox --reconfigure
super + Escape
  pkill -USR1 -x sxhkd
super + x
  $HOME/.config/rofi/applets/bin/powermenu.sh
super + n
  $TERMINAL -e newsboat
super + m
  $HOME/.config/rofi/applets/bin/mpd.sh
super + shift + m
  pulsemixer --toggle-mute
Print
  $HOME/.config/rofi/applets/bin/screenshot.sh

# media key
super + {equal,plus}
  pulsemixer --change-volume +{5,15}
super + {_,shift +} + minus
  pulsemixer --change-volume -{5,15}
super + p
  mpc toggle

XF86MonBrightness{Up,Down}
  brightnessctl s 10{+,-}

XF86Audio{Raise,Lower}Volume
  pulsemixer --change-volume {+,-}10

XF86AudioMute
  pulsemixer  --toggle-mute
